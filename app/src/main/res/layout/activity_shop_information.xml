<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.shops.ShopInformationActivity"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/mainScreenToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/shop_info_map_banner" android:id="@+id/shop_info_map_banner"/>

    <TextView
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="5dp"
        android:padding="5dp"
        android:id="@+id/shop_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Default shop name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/full_address_text_view"
        android:layout_marginHorizontal="5dp"
        android:text="Anastasiou Stamou 4, Athens, Greece"
        android:padding="5dp"
        android:gravity="center"
        android:textAlignment="center"/>

    <!-- Social Media -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="5dp">

        <ImageView
            android:id="@+id/instagram_image_view"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/instagram" />

        <ImageView
            android:id="@+id/facebook_image_view"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/twitter_image_view"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginHorizontal="5dp"
            android:src="@drawable/twitter" />

    </LinearLayout>




</LinearLayout>


