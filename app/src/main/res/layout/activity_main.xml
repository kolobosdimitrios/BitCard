<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <Button
            android:id="@+id/login_with_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_baseline_login_24"
            android:drawableTint="@android:color/white"
            android:padding="15dp"
            android:text="@string/login"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/create_account_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_person_focused"
            android:drawableTint="@android:color/white"
            android:padding="15dp"
            android:text="@string/register"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            tools:ignore="RtlHardcoded" />

        <!--        <Button-->
        <!--            android:id="@+id/login_with_google_acc"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:textAlignment="textStart"-->
        <!--            android:layout_margin="5dp"-->
        <!--            android:padding="15dp"-->
        <!--            android:text="@string/register"-->
        <!--            android:drawableEnd="@drawable/ic_person_focused"-->
        <!--            android:drawableTint="@android:color/white"-->
        <!--            android:textAllCaps="false" />-->


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>