<?xml version="1.0" encoding="UTF-8"?>


<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!--the outline box turns to green when the edit text is in focus-->
<item android:state_enabled="true" android:state_focused="true">
    <shape>
        <gradient android:startColor="@color/primaryColor" android:endColor="#FFFFFF"/>
        <corners android:radius="100dp"/>
        <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
        <stroke  android:color="@color/primaryColor" android:width="1dp"/>

    </shape>
</item>

<!--the outline box turns to grey when the edit text is out of focus-->
<item android:state_enabled="true">
    <shape>
        <solid android:color="#FFFFFF"/>
        <corners android:radius="100dp"/>
        <padding android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="0dp" />
        <stroke  android:color="@color/primaryColor" android:width="1dp"/>

    </shape>
</item>
</selector>
