<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bitcard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BitCard">
        <activity
            android:name=".ProfileInfoActivity"
            android:label="@string/ProfileInfoActivity"
            android:exported="false" />
        <activity
            android:name=".PurchaseHistoryActivity"
            android:exported="false"
            android:label="@string/purchase_history" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/settings" />
        <activity
            android:name=".MainScreenActivity"
            android:exported="false"
            android:label="@string/MainScreenActivityTitle" />
        <activity
            android:label="@string/ShopsActivityLabel"
            android:name=".ShopsActivity"
            android:exported="false" />
        <!--
             TODO: Before you run your application, you need a Google Maps API key.

             To get one, follow the directions here:

                https://developers.google.com/maps/documentation/android-sdk/get-api-key

             Once you have your API key (it starts with "AIza"), define a new property in your
             project's local.properties file (e.g. MAPS_API_KEY=Aiza...), and replace the
             "YOUR_API_KEY" string in this file with "${MAPS_API_KEY}".
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="YOUR_API_KEY" />

        <activity
            android:label="@string/ShopDetailActivityLabel"
            android:name=".ShopDetailActivity"
            android:exported="false" />
        <activity
            android:label="@string/CreateCardActivityLabel"
            android:name=".CreateCardActivity"
            android:exported="false" />
        <activity
            android:theme="@style/splashScreenTheme"
            android:name=".StartupActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="@string/CreateAccountActivityLabel" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/LoginActivityLabel" />
    </application>

</manifest>